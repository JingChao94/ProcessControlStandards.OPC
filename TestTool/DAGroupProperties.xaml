<Window x:Class="ProcessControlStandards.OPC.TestTool.DAGroupProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="DA Group properties" Height="500" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <xctk:PropertyGrid x:Name="_propertyGrid" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="_acceptButton"  Click="OnAcceptButton" Margin="5" Padding="5">Create</Button>
        </StackPanel>
    </Grid>
</Window>
